{% extends "@App/template.html.twig" %}

{% block title %}AppBundle:Home:home{% endblock %}

{% block pageHeaderTitle %}
	{{ 'home.header.title'|trans }}
{% endblock %}

{% block pageHeaderSubTitle %}
	{{ 'home.header.subtitle'|trans }}
{% endblock %}

{% block navigationHomeSubmenu %}
	<li class="nav-item">
		<a class="nav-link" href="{{ path('default') }}#about">{{ 'navigation.home.submenu.about'|trans }}</a>
	</li>

	<li class="nav-item">
		<a class="nav-link" href="{{ path('default') }}#route">{{ 'navigation.home.submenu.route'|trans }}</a>
	</li>

	<li class="nav-item">
		<a class="nav-link" href="{{ path('default') }}#contact">{{ 'navigation.home.submenu.contact'|trans }}</a>
	</li>
{% endblock %}

{% block pageContent %}
	<section id="about">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2">
					<h2>{{ 'home.content.title.about'|trans }}</h2>
					<p>
						{{ 'home.content.text.about'|trans }}
					</p>
				</div>
			</div>
		</div>
	</section>

	<section id="route" class="bg-faded">
		<div class="container-fluid">
			<div class="row">
					<h2 class="col-lg-12 text-center">{{ 'home.content.title.route'|trans }}</h2>
					<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2729.7945766107305!2d5.107653614931567!3d46.82804614942711!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f2dcf883370465%3A0x53d9c1187498b78!2s7+Chemin+de+Pouilly%2C+71310+Serrigny-en-Bresse!5e0!3m2!1snl!2sfr!4v1500224795071" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
				</div>
			</div>
		</div>
	</section>

	<section id="contact">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2">
					<h2>{{ 'home.content.title.contact'|trans }}</h2>
					{{ form_start(contactForm) }}
					{{ form_widget( contactForm ) }}
					<button type="submit" class="btn btn-info col-12">{{ 'home.content.form.contact.send'|trans }}</button>
					{{ form_end(contactForm ) }}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
