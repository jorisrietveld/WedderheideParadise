{% extends "@App/design/layout/scroller-layout.html.twig" %}

{% block title %}AppBundle:Home:home{% endblock %}

{% block pageHeaderTitleHolder %}
	<div class="">
		<h1 class="row header-title">
			<span class="col-lg-12 header-title-container">Wedderheide</span>
			<span class="col-lg-12 header-title-container"> Paradise</span>
		</h1>
	</div>
{% endblock %}

{% block pageContent %}

	{% embed '@App/design/modules/scroller-section.html.twig' with { 'sectionId': 'about', 'sectionTitleKey': 'home.content.title.about' } %}
		{% block sectionContent %}
			<p>
				{{ 'home.content.text.about'|trans }}
			</p>
		{% endblock %}
	{% endembed %}

	{% embed '@App/design/modules/scroller-section.html.twig' with { 'sectionId': 'route', 'sectionTitleKey': 'home.content.title.route' } %}
		{% block sectionContent %}
			{% image '@AppBundle/Resources/public/images/development/mapPlaceholder.png' %}
			<img src="{{ asset_url }}" alt="Example"/>
			{% endimage %}
		{% endblock %}
	{% endembed %}

	{% embed '@App/design/modules/scroller-section.html.twig' with { 'sectionId': 'contact', 'sectionTitleKey': 'home.content.title.contact' } %}
		{% block sectionContent %}
			{{ form_start(contactForm) }}
			{{ form_widget( contactForm ) }}
			<button type="submit"
			        class="btn btn-info col-12">{{ 'home.content.form.contact.send'|trans }}</button>
			{{ form_end(contactForm ) }}
		{% endblock %}
	{% endembed %}

{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}
