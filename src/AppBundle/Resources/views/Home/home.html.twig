{% extends "@App/design/layout/scroller-layout.html.twig" %}

{% block title %}AppBundle:Home:home{% endblock %}

{% set scrollerNavigation %}
	{% embed '@App/design/modules/scroller-navigation.html.twig' %}

	{% endembed %}
{% endset %}

{% block navigationHomeSubmenu %}
	<li class="nav-item">
		<a class="nav-link" href="{{ path('default') }}#about">{{ 'navigation.home.submenu.about'|trans }}</a>
	</li>

	<li class="nav-item">
		<a class="nav-link" href="{{ path('default') }}#route">{{ 'navigation.home.submenu.route'|trans }}</a>
	</li>

	<li class="nav-item">
		<a class="nav-link" href="{{ path('default') }}#contact">{{ 'navigation.home.submenu.contact'|trans }}</a>
	</li>
{% endblock %}

{% block pageHeaderTitleHolder %}
	<div class="">
		<h1 class="row header-title">
			<span class="col-lg-12 header-title-container">Wedderheide</span>
			<span class="col-lg-12 header-title-container"> Paradise</span>
		</h1>
	</div>
{% endblock %}

{% block pageContent %}
	<section id="about" class="page-section mt-2 section">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2">
					<h1>{{ 'home.content.title.about'|trans }}</h1>
					<p>
						{{ 'home.content.text.about'|trans }}
					</p>
				</div>
			</div>
		</div>
	</section>

	<section id="route" class="bg-faded page-section section">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2">
					<h2>{{ 'home.content.title.route'|trans }}</h2>
					{% image '@AppBundle/Resources/public/images/development/mapPlaceholder.png' %}
					<img src="{{ asset_url }}" alt="Example"/>
					{% endimage %}
				</div>
			</div>
		</div>
	</section>

	<section id="contact" class="page-section section">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2">
					<h2>{{ 'home.content.title.contact'|trans }}</h2>
					{{ form_start(contactForm) }}
					{{ form_widget( contactForm ) }}
					<button type="submit"
					        class="btn btn-info col-12">{{ 'home.content.form.contact.send'|trans }}</button>
					{{ form_end(contactForm ) }}
				</div>
			</div>
		</div>
	</section>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}
